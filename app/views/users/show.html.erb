<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <h1>タスク一覧</h1>
      <ul>
        <% @tasks.each do |task| %>
        <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
        <% end %>
      </ul>
    </div>
  </aside>
 
</div>